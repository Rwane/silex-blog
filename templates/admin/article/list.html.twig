
{% extends "layout.html.twig" %}

{% block content %}
    <h1>Articles</h1>
    
    <p><a href="{{ path('admin_article_edit') }}">ajouter un article</a></p>
    
    <table class="table">
        <tr>
            <th>id</th>
            <th>content</th>
            <th>header</th>
            <th>title</th>
            <th>Categorie</th>
            <th>Auteur</th>       
            <th>Edition</th>
            
            
        </tr>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.content }}</td>
                <td>{{ article.header }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.categoryName }}</td>
                <td>{{ article.authorName }}</td>
                <td>
                    <a href="{{path('admin_article_edit', {id: article.id}) }}" class="btn btn-primary">modifier</a>
                    <a href="{{path('admin_article_delete', {id: article.id}) }}" class="btn btn-danger">supprimer</a>
                </td>
            </tr>
         {% else %}
             <tr><td colspan="2" style="text-align: center">Aucun r√©sultat</td></tr>
        {% endfor %}    
    </table>
{% endblock %}


