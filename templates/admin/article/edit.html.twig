{% extends "layout.html.twig" %}

{% block content %}
    <h1>{% if article.id %}Modification{% else %}Cr√©ation{% endif %} articles</h1>
    <form class="form-horizontal" method="post">
        <fieldset>

<!-- Form Name -->
    <legend>EDIT article</legend>

<!-- Text input-->
    <div class="form-group">
     <label class="col-md-4 control-label" for="nom">Title</label>  
  <div class="col-md-4">
  <input  name="title" type="text" placeholder="" value="{{article.title}}" class="form-control input-md">
    
  </div>
</div>

<!-- Text input-->
    <div class="form-group">
     <label class="col-md-4 control-label" for="nom">content</label>  
  <div class="col-md-4">
      <textarea  name="content" class="form-control input-md">{{article.content}}</textarea>
    
  </div>
</div>

<!-- Text input-->
    <div class="form-group">
     <label class="col-md-4 control-label" for="nom">header</label>  
  <div class="col-md-4">
      <textarea  name="header" class="form-control input-md">{{article.header}}</textarea>
    
  </div>
</div>

      <!-- Select Basic -->
<div class="form-group">
  <label class="col-md-4 control-label" for="category">Category</label>
  <div class="col-md-4">
    <select id="Category" name="category" class="form-control">
        <option value="">Choissisez une rubrique</option>
        {% for category in categories %}
            <option value="{{category.id}}" {% if category.id == article.categoryId %}selected{% endif %}>{{category.name}}</option>
         {% endfor %}
      
      
        
    </select>
  </div>
</div>

      
<!-- Button -->
<div class="form-group">
  <label class="col-md-4 control-label" for="singlebutton">[-_-]</label>
  <div class="col-md-4">
    <button  name="singlebutton" type="submit" class="btn btn-primary">Enregistrer</button>
    <a href="{{path('admin_articles')}}" class="btn btn-default">Annuler</a>
  </div>
</div>

</fieldset>
</form>
{% endblock %}

   


